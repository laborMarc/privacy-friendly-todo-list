<?xml version="1.0" encoding="utf-8"?>
<!-- Updating widget periodically to have up-to-date urgency colors and days-until-deadline. -->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:configure="org.secuso.privacyfriendlytodolist.view.widget.TodoListWidgetConfigureActivity"
    android:initialKeyguardLayout="@layout/widget_list"
    android:initialLayout="@layout/widget_list"
    android:minWidth="160dp"
    android:minHeight="80dp"
    android:minResizeWidth="80dp"
    android:minResizeHeight="80dp"
    android:updatePeriodMillis="14400000"
    android:previewImage="@drawable/widget_preview"
    android:resizeMode="horizontal|vertical"
    android:widgetCategory="home_screen" />
